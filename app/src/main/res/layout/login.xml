<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo"/>

        <RelativeLayout
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/logo"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/customerLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/customerRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/customerLogin"
                android:layout_alignParentEnd="true"
                android:text="@string/register"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/normal"
                android:textSize="16sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nav"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/normal"
                android:text="@string/emailInput"/>

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusableInTouchMode="true"
                android:padding="10dp"
                android:maxHeight="50dp"
                android:layout_below="@+id/emailText"
                android:background="@color/textLight" />

            <TextView
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inputEmail"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/normal"
                android:text="@string/passwordInput"/>

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:maxHeight="50dp"
                android:padding="10dp"
                android:layout_below="@+id/password"
                android:background="@color/textLight" />

            <TextView
                android:id="@+id/password_forgotten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_forgotten"
                android:layout_below="@+id/passwordInput"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/normal"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id ="@+id/loginBtn"
                android:padding="15dp"
                android:text="@string/loginBtn"
                android:textColor="@color/textWhite"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button"
                android:layout_below="@+id/password_forgotten"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/social_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_below="@id/form"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:fontFamily="@font/bold"
            android:text="@string/socialLogin"/>

        <RelativeLayout
            android:id="@+id/social_links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/social_login"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="110dp"
            android:layout_marginEnd="110dp">

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/facebook"
                android:contentDescription="@string/socialLogin"/>

            <ImageView
                android:id="@+id/google"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/google"
                android:contentDescription="@string/socialLogin"/>

        </RelativeLayout>

    </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
